rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Newsletter subscribers collection
    match /newsletter-subscribers/{subscriberId} {
      // Allow all operations for newsletter subscribers
      // This is a temporary solution to fix the permission issues
      allow create, read: if true;
      
      // Only allow admin updates and deletes
      allow update, delete: if false;
    }
    
    // Contact form submissions collection
    match /contact-submissions/{submissionId} {
      // Allow creation without restrictions
      // This is a temporary solution to fix the permission issues
      allow create: if true;
      
      // Only allow admin reads, updates, and deletes
      allow read, update, delete: if false;
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
