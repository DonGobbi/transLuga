rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Simplified rules for testing
    // WARNING: These rules are insecure and should only be used temporarily for testing
    
    // Newsletter subscribers collection - allow all operations for testing
    match /newsletter-subscribers/{subscriberId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
    
    // Contact form submissions collection - allow all operations for testing
    match /contact-submissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
